---
// src/pages/services/installation.astro
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

// Importing assets
import installationHero from '../../assets/Installation.jpg';

// Base Contact Links
const whatsappBase = "https://wa.me/19418961852";
const phoneLink = "tel:+19418961852";

// Personalized English Messages
const msgGeneral = encodeURIComponent("Hello, I would like to get a free estimate for flooring or wall installation.");
const msgFloors = encodeURIComponent("Hello, I am interested in a flooring installation quote for my home.");
const msgWalls = encodeURIComponent("Hello, I would like to consult about wall covering options.");
// Note: msgBath is not used here as the link goes to the gallery.
---

<Layout 
  title="Professional Flooring & Wall Installation in Sarasota | Globo Care Remodeling" 
  description="Specialists in technical flooring installation, wall coverings, and bathroom finishes in Sarasota. High-quality results and free estimates."
>

  {/* --- HERO SECTION --- */}
  <section class="relative bg-neutral-deep text-white min-h-[60vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0">
      <Image 
        src={installationHero} 
        alt="Flooring and Wall Installation in Sarasota" 
        class="w-full h-full object-cover opacity-40"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-neutral-deep/80 via-neutral-deep/50 to-neutral-deep/90"></div>
    </div>

    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-20">
      <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6 leading-tight">
        Specialized Installation of <br />
        <span class="text-primary">Floors, Walls & Bathrooms</span>
      </h1>
      
      <p class="text-lg md:text-xl text-gray-200 mb-10 font-light leading-relaxed max-w-2xl mx-auto">
        The foundation of an exceptional home begins with flawless installation. We bring technical precision to every surface of your property.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href={`${whatsappBase}?text=${msgGeneral}`} target="_blank" rel="noopener noreferrer" class="w-full sm:w-auto bg-primary hover:bg-primary-dark text-neutral-deep px-8 py-4 rounded-md font-bold text-lg transition-all shadow-[0_4px_14px_0_rgba(243,146,0,0.39)] hover:shadow-[0_6px_20px_rgba(243,146,0,0.23)] hover:-translate-y-1 text-center">
          Get Free Estimate
        </a>
        <a href="/gallery" class="w-full sm:w-auto group bg-transparent border-2 border-white hover:bg-white hover:text-neutral-deep text-white px-8 py-4 rounded-md font-bold text-lg transition-all text-center flex items-center justify-center gap-2">
          View Finishes Gallery
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  {/* --- SPECIALTIES (Clean Design / No Icons) --- */}
  <section class="py-24 bg-neutral-light relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-neutral-deep mb-4">
          Precision and durability on <span class="text-primary">every surface</span>.
        </h2>
        <div class="h-1 w-24 bg-primary mx-auto rounded-full"></div>
      </div>

      <div class="grid md:grid-cols-3 gap-8 items-stretch">
        
        {/* Card: Flooring */}
        <div class="relative bg-white p-8 pt-10 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border-t-4 border-primary group overflow-hidden h-full flex flex-col">
           <div class="relative z-10 flex flex-col h-full">
              <h3 class="font-heading text-2xl font-bold text-neutral-deep mb-4">Flooring Installation</h3>
              <p class="text-gray-600 leading-relaxed mb-8 text-sm flex-grow">
                Expert installation of a wide variety of materials, ensuring perfect levels and seamless transitions throughout your home.
              </p>
              <a href={`${whatsappBase}?text=${msgFloors}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center font-bold text-primary hover:text-primary-dark transition-colors uppercase tracking-wider text-sm">
                Quote my flooring 
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
              </a>
           </div>
        </div>

        {/* Card: Walls */}
        <div class="relative bg-white p-8 pt-10 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border-t-4 border-neutral-deep group overflow-hidden h-full flex flex-col">
           <div class="relative z-10 flex flex-col h-full">
              <h3 class="font-heading text-2xl font-bold text-neutral-deep mb-4">Wall Coverings</h3>
              <p class="text-gray-600 leading-relaxed mb-8 text-sm flex-grow">
                Application of finishes and decorative or functional materials on walls, elevating interior design with professional mounting techniques.
              </p>
              <a href={`${whatsappBase}?text=${msgWalls}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center font-bold text-primary hover:text-primary-dark transition-colors uppercase tracking-wider text-sm">
                Consult options
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
              </a>
           </div>
        </div>

        {/* Card: Bathrooms */}
        <div class="relative bg-white p-8 pt-10 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border-t-4 border-primary group overflow-hidden h-full flex flex-col">
           <div class="relative z-10 flex flex-col h-full">
              <h3 class="font-heading text-2xl font-bold text-neutral-deep mb-4">Bathroom Finishes</h3>
              <p class="text-gray-600 leading-relaxed mb-8 text-sm flex-grow">
                Precise installation of essential and decorative elements that guarantee long-term functionality and aesthetics in your bathroom.
              </p>
              {/* Internal Link to Gallery */}
              <a href="/gallery" class="inline-flex items-center font-bold text-primary hover:text-primary-dark transition-colors uppercase tracking-wider text-sm">
                View projects
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
              </a>
           </div>
        </div>

      </div>
    </div>
  </section>

  {/* --- THE GLOBO CARE STANDARD --- */}
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        
        {/* Left Column */}
        <div>
           <h2 class="font-heading text-3xl md:text-4xl font-bold text-neutral-deep mb-6 leading-tight">
             Why our installation makes the <span class="text-primary">difference</span>.
           </h2>
           <p class="text-gray-600 text-lg leading-relaxed mb-8">
             In Florida, humidity and climate demand more than just aesthetics. Our process guarantees structural durability and finishes that withstand the test of time.
           </p>
           <a href={phoneLink} class="hidden md:inline-block bg-neutral-deep text-white px-8 py-3 rounded-md font-bold hover:bg-black transition-colors">
             Let's Talk Quality
           </a>
        </div>

        {/* Right Column: Value List (Lines only) */}
        <div class="space-y-8">
          
          <div class="flex gap-6 group">
            <div class="w-1 bg-gray-200 group-hover:bg-primary transition-colors h-auto rounded-full"></div>
            <div>
               <h3 class="text-xl font-bold text-neutral-deep mb-2">Technical Precision</h3>
               <p class="text-gray-500 leading-relaxed">
                 We focus on millimetric detail. Exact cuts and laser leveling to ensure every piece fits perfectly.
               </p>
            </div>
          </div>

          <div class="flex gap-6 group">
            <div class="w-1 bg-gray-200 group-hover:bg-primary transition-colors h-auto rounded-full"></div>
            <div>
               <h3 class="text-xl font-bold text-neutral-deep mb-2">Local Reliability</h3>
               <p class="text-gray-500 leading-relaxed">
                 As Sarasota-based experts, we understand the standards and expectations of local families.
               </p>
            </div>
          </div>

          <div class="flex gap-6 group">
            <div class="w-1 bg-gray-200 group-hover:bg-primary transition-colors h-auto rounded-full"></div>
            <div>
               <h3 class="text-xl font-bold text-neutral-deep mb-2">High-End Materials</h3>
               <p class="text-gray-500 leading-relaxed">
                 We only work with proven, durable materials to ensure the beauty of your installation lasts for years.
               </p>
            </div>
          </div>

        </div>

      </div>
    </div>
  </section>

  {/* --- CONVERSION / LEADS --- */}
  <section class="py-16 bg-neutral-light border-y border-gray-100">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="font-heading text-3xl font-bold text-neutral-deep mb-4">
        Start your project with expert hands.
      </h2>
      <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
        Do you already have the materials or need technical advice? Our team is ready to help. Receive a clear, professional quote with no obligation.
      </p>
      
      <div class="flex flex-col md:flex-row gap-6 justify-center">
        <a href={`${whatsappBase}?text=${msgGeneral}`} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center gap-3 bg-[#25D366] hover:bg-[#128C7E] text-white px-8 py-4 rounded-lg font-bold text-lg transition-all shadow-lg hover:shadow-xl hover:-translate-y-1">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.013 6.17 1.242 8.413 3.491 2.243 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.506-.669-.516-.173-.009-.371-.009-.569-.009-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
          Chat with a Specialist
        </a>

        <a href={phoneLink} class="flex items-center justify-center gap-3 bg-neutral-deep hover:bg-black text-white px-8 py-4 rounded-lg font-bold text-lg transition-all shadow-lg hover:shadow-xl hover:-translate-y-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Talk to an Expert
        </a>
      </div>
    </div>
  </section>

  {/* --- SOCIAL PROOF --- */}
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="font-heading text-3xl font-bold text-neutral-deep mb-12">
        Tangible Results.
      </h2>
      
      <blockquote class="text-xl md:text-2xl italic text-gray-600 mb-8 relative px-8">
        <span class="text-6xl text-primary absolute -top-8 left-0 opacity-20">"</span>
        The precision in the installation of our living room floors was incredible. The professionalism is evident in every joint and corner.
        <span class="text-6xl text-primary absolute -bottom-12 right-0 opacity-20">"</span>
      </blockquote>
      
      <div class="flex flex-col items-center">
        <div class="w-12 h-1 bg-primary mb-4 rounded-full"></div>
        <p class="font-bold text-neutral-deep">â€” Satisfied Client</p>
      </div>
    </div>
  </section>

  {/* --- INTERNAL LINKS --- */}
  <section class="py-16 bg-neutral-light">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h3 class="font-heading text-xl font-bold text-gray-400 uppercase tracking-widest text-center mb-10">Complementary Services</h3>
      
      <div class="grid md:grid-cols-3 gap-6">
        <a href="/services/remodeling" class="group block p-6 bg-white rounded-xl hover:shadow-lg transition-all border border-transparent hover:border-primary/20">
          <div class="flex items-center gap-4 mb-2">
            <div class="bg-neutral-light p-2 rounded-lg shadow-sm group-hover:bg-primary group-hover:text-white transition-colors text-neutral-deep">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h4 class="font-bold text-neutral-deep text-lg group-hover:text-primary transition-colors">Remodeling</h4>
          </div>
          <p class="text-sm text-gray-500 pl-[3.25rem]">Full renovation.</p>
        </a>

        <a href="/services/demolition" class="group block p-6 bg-white rounded-xl hover:shadow-lg transition-all border border-transparent hover:border-primary/20">
          <div class="flex items-center gap-4 mb-2">
            <div class="bg-neutral-light p-2 rounded-lg shadow-sm group-hover:bg-primary group-hover:text-white transition-colors text-neutral-deep">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            </div>
            <h4 class="font-bold text-neutral-deep text-lg group-hover:text-primary transition-colors">Demolition</h4>
          </div>
          <p class="text-sm text-gray-500 pl-[3.25rem]">Site preparation.</p>
        </a>

        <a href="/gallery" class="group block p-6 bg-white rounded-xl hover:shadow-lg transition-all border border-transparent hover:border-primary/20">
          <div class="flex items-center gap-4 mb-2">
             <div class="bg-neutral-light p-2 rounded-lg shadow-sm group-hover:bg-primary group-hover:text-white transition-colors text-neutral-deep">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <h4 class="font-bold text-neutral-deep text-lg group-hover:text-primary transition-colors">Gallery</h4>
          </div>
          <p class="text-sm text-gray-500 pl-[3.25rem]">Get inspired.</p>
        </a>
      </div>
    </div>
  </section>

</Layout>
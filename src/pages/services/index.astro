---
// src/pages/services/index.astro
import Layout from '../../layouts/Layout.astro';

// Mensaje WhatsApp (Inglés)
const whatsappMsg = "Hello, I would like more information about your general services.";
const whatsappLink = `https://wa.me/19418961852?text=${encodeURIComponent(whatsappMsg)}`;
---

<Layout 
  title="Our Services | Globo Care Remodeling" 
  description="Comprehensive solutions in remodeling, flooring installation, and controlled demolition in Sarasota. Premium quality and guaranteed cleanliness.">
  
  <section class="relative bg-neutral-deep text-white py-24 lg:py-32 overflow-hidden">
    <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-heading text-4xl md:text-6xl font-bold tracking-tight mb-6">
        Excellence at Every Stage <br />
        <span class="text-primary">of Your Project.</span>
      </h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto font-light leading-relaxed">
        We aren't just contractors; we are artisans of detail. From initial demolition to the final finish, we guarantee a clean, organized, and high-end process.
      </p>
    </div>
  </section>

  <section class="py-20 bg-neutral-light relative -mt-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-20">
      <div class="grid md:grid-cols-3 gap-8">
        
        <article class="group bg-white rounded-xl overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 flex flex-col h-full transform hover:-translate-y-2">
          <div class="h-64 overflow-hidden relative">
            <div class="absolute inset-0 bg-neutral-deep/20 group-hover:bg-transparent transition-colors z-10"></div>
            <img 
              src="https://images.unsplash.com/photo-1552321554-5fefe8832273?q=80&w=800&auto=format&fit=crop" 
              alt="Bathroom Remodeling" 
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
            />
          </div>
          <div class="p-8 flex-1 flex flex-col border-b-4 border-transparent group-hover:border-primary transition-colors">
            <h3 class="font-heading text-2xl font-bold text-neutral-deep mb-3">Full Remodeling</h3>
            <p class="text-gray-600 mb-6 flex-1">
              We transform bathrooms and interior spaces with modern and functional designs. Specialists in space optimization and luxury finishes.
            </p>
            <ul class="text-sm text-gray-500 mb-8 space-y-2">
              <li class="flex items-center gap-2">✓ Master Bathroom Design</li>
              <li class="flex items-center gap-2">✓ Custom Cabinetry</li>
            </ul>
            <a href="/services/remodeling" class="inline-flex items-center font-bold text-primary group-hover:text-primary-dark transition-colors">
              Explore Remodeling 
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </article>

        <article class="group bg-white rounded-xl overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 flex flex-col h-full transform hover:-translate-y-2">
          <div class="h-64 overflow-hidden relative">
            <div class="absolute inset-0 bg-neutral-deep/20 group-hover:bg-transparent transition-colors z-10"></div>
            <img 
              src="https://images.unsplash.com/photo-1581858726768-7dd696e95263?auto=format&fit=crop&w=800&q=80" 
              alt="Flooring Installation" 
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
            />
          </div>
          <div class="p-8 flex-1 flex flex-col border-b-4 border-transparent group-hover:border-primary transition-colors">
            <h3 class="font-heading text-2xl font-bold text-neutral-deep mb-3">Expert Installation</h3>
            <p class="text-gray-600 mb-6 flex-1">
              Technical installation of flooring (hardwood, porcelain, vinyl) and wall coverings. We guarantee perfect leveling and precise cuts.
            </p>
            <ul class="text-sm text-gray-500 mb-8 space-y-2">
              <li class="flex items-center gap-2">✓ 3D Walls & Flooring</li>
              <li class="flex items-center gap-2">✓ Kitchen Backsplashes</li>
            </ul>
            <a href="/services/installation" class="inline-flex items-center font-bold text-primary group-hover:text-primary-dark transition-colors">
              Explore Installation
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </article>

        <article class="group bg-white rounded-xl overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 flex flex-col h-full transform hover:-translate-y-2">
          <div class="h-64 overflow-hidden relative">
            <div class="absolute inset-0 bg-neutral-deep/20 group-hover:bg-transparent transition-colors z-10"></div>
            <img 
              src="https://images.unsplash.com/photo-1503387762-592deb58ef4e?auto=format&fit=crop&w=800&q=80" 
              alt="Clean Demolition" 
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
            />
          </div>
          <div class="p-8 flex-1 flex flex-col border-b-4 border-transparent group-hover:border-primary transition-colors">
            <h3 class="font-heading text-2xl font-bold text-neutral-deep mb-3">General Demolition</h3>
            <p class="text-gray-600 mb-6 flex-1">
              The first step of a great project. We perform controlled, safe demolitions with strict debris and dust management.
            </p>
            <ul class="text-sm text-gray-500 mb-8 space-y-2">
              <li class="flex items-center gap-2">✓ Dust Protection</li>
              <li class="flex items-center gap-2">✓ Debris Removal</li>
            </ul>
            <a href="/services/demolition" class="inline-flex items-center font-bold text-primary group-hover:text-primary-dark transition-colors">
              Explore Demolition
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </article>

      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-neutral-deep rounded-2xl overflow-hidden shadow-2xl flex flex-col md:flex-row">
        <div class="md:w-1/2 p-12 flex flex-col justify-center text-white">
          <h3 class="font-heading text-3xl font-bold mb-6">
            Our Promise: <span class="text-primary">Your Home, Spotless.</span>
          </h3>
          <p class="text-gray-300 mb-8 text-lg leading-relaxed">
            We know dust is the biggest nightmare of remodeling. We use containment technology and vacuum systems to ensure the rest of your home remains livable and clean.
          </p>
          <div class="flex gap-4">
             <div class="flex items-center gap-2 text-primary font-bold">
                <span class="text-2xl">0%</span> Stress
             </div>
             <div class="w-px bg-gray-600 h-8"></div>
             <div class="flex items-center gap-2 text-primary font-bold">
                <span class="text-2xl">100%</span> Transparency
             </div>
          </div>
        </div>
        <div class="md:w-1/2 relative h-64 md:h-auto">
             <img src="https://images.unsplash.com/photo-1584622650111-993a426fbf0a?auto=format&fit=crop&w=800&q=80" alt="Clean construction site" class="absolute inset-0 w-full h-full object-cover opacity-80" />
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-neutral-light">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="font-heading text-3xl font-bold text-neutral-deep mb-6">Ready to Upgrade Your Space?</h2>
      <p class="text-gray-600 mb-8">Let's talk about your project today.</p>
      <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="inline-block bg-primary hover:bg-primary-dark text-black px-8 py-4 rounded-md font-bold text-lg transition-all shadow-lg hover:shadow-xl hover:-translate-y-1">
        Request General Quote
      </a>
    </div>
  </section>

</Layout>
</Layout>

<script is:inline>
  // --- Filters ---
  const filterBtns = document.querySelectorAll('.filter-btn');
  const projectItems = document.querySelectorAll('.project-item');
  const noResults = document.getElementById('no-results');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      filterBtns.forEach(b => {
        b.classList.remove('bg-neutral-deep', 'text-white', 'border-neutral-deep', 'shadow-lg');
        b.classList.add('bg-white', 'text-gray-500', 'border-transparent');
      });
      btn.classList.remove('bg-white', 'text-gray-500', 'border-transparent');
      btn.classList.add('bg-neutral-deep', 'text-white', 'border-neutral-deep', 'shadow-lg');

      const filterValue = btn.getAttribute('data-filter');
      let hasVisible = false;

      projectItems.forEach(item => {
        if (filterValue === 'all' || item.getAttribute('data-category') === filterValue) {
          item.classList.remove('hidden');
          item.style.animation = 'fadeIn 0.5s ease forwards';
          hasVisible = true;
        } else {
          item.classList.add('hidden');
        }
      });
      
      noResults.classList.toggle('hidden', hasVisible);
    });
  });

  // --- Lightbox ---
  const lightbox = document.getElementById('lightbox');
  const lightboxImg = document.getElementById('lightbox-img');
  const lightboxCaption = document.getElementById('lightbox-caption');

  window.openLightbox = (src, title) => {
    lightboxImg.src = src;
    lightboxCaption.textContent = title;
    lightbox.classList.remove('hidden');
    requestAnimationFrame(() => {
        lightbox.classList.remove('opacity-0');
    });
    document.body.style.overflow = 'hidden';
  };

  window.closeLightbox = () => {
    lightbox.classList.add('opacity-0');
    setTimeout(() => {
      lightbox.classList.add('hidden');
      lightboxImg.src = '';
      document.body.style.overflow = '';
    }, 300);
  };

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') window.closeLightbox();
  });

  const style = document.createElement('style');
  style.textContent = `
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
  `;
  document.head.appendChild(style);
</script>
---

<Layout title={title} description={description}>
  
  {/* --- 1. TECHNICAL HERO (Minimalist & Dark) --- */}
  <section class="relative bg-neutral-deep text-white py-20 border-b border-white/5 overflow-hidden">
    
    {/* Grid Pattern */}
    <div class="absolute inset-0 opacity-5 pointer-events-none" 
         style="background-image: linear-gradient(to right, #ffffff 1px, transparent 1px), linear-gradient(to bottom, #ffffff 1px, transparent 1px); background-size: 50px 50px;">
    </div>
    
    {/* Subtle Glow */}
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[300px] bg-primary/5 blur-[100px] rounded-full pointer-events-none"></div>

    <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
      {/* Frame */}
      <div class="border-l border-r border-primary/20 px-6 py-8 relative">
          
          {/* Corner Accents */}
          <div class="absolute top-0 left-0 w-3 h-3 border-t border-l border-primary/50"></div>
          <div class="absolute top-0 right-0 w-3 h-3 border-t border-r border-primary/50"></div>
          <div class="absolute bottom-0 left-0 w-3 h-3 border-b border-l border-primary/50"></div>
          <div class="absolute bottom-0 right-0 w-3 h-3 border-b border-r border-primary/50"></div>

          <h1 class="font-heading text-3xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-5 text-white leading-tight">
            Explore our <br />
            <span class="text-primary">Experience</span>
          </h1>
          
          <div class="w-20 h-px bg-gradient-to-r from-transparent via-primary/60 to-transparent mx-auto mb-6 opacity-40"></div>

          <p class="text-lg md:text-xl text-gray-400 font-light max-w-2xl mx-auto leading-relaxed">
            {texts.subheading}
          </p>
      </div>
    </div>
  </section>

  {/* --- 2. FILTER BAR (Preserved Functionality) --- */}
  <section class="bg-neutral-light py-10 border-b border-gray-100 sticky top-20 z-40 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="flex flex-wrap justify-center gap-3" id="portfolio-filters">
        {categories.map((cat, index) => (
          <button
            class={`filter-btn px-6 py-2 rounded-full text-sm font-bold transition-all border-2 
              ${index === 0 
                ? 'bg-neutral-deep text-white border-neutral-deep shadow-lg' 
                : 'bg-white text-gray-500 border-transparent hover:border-primary hover:text-primary'}`}
            data-filter={cat.id}
          >
            {cat.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  {/* --- 3. GALLERY GRID (Original Content) --- */}
  <section class="bg-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8" id="gallery-grid">
        {projects.map((project) => (
          <div 
            class="group relative overflow-hidden rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 cursor-pointer project-item bg-gray-100 aspect-[4/3]"
            data-category={project.category}
            onclick={`openLightbox('${project.img.src}', '${project.title}')`}
          >
            <Image 
              src={project.img} 
              alt={project.alt}
              width={600}
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
            />
            
            <div class="absolute inset-0 bg-neutral-deep/70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
              <span class="text-primary font-bold text-sm uppercase tracking-wider mb-1">
                {categories.find(c => c.id === project.category)?.label}
              </span>
              <h3 class="text-white font-heading font-bold text-xl">
                {project.title}
              </h3>
              <div class="mt-4 inline-flex items-center text-white/80 text-sm gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" /></svg>
                View Larger
              </div>
            </div>
          </div>
        ))}
      </div>

      <div id="no-results" class="hidden text-center py-20">
        <p class="text-gray-500 text-lg">No projects in this category at the moment.</p>
      </div>

    </div>
  </section>

  {/* --- 4. LIGHTBOX (Original Content) --- */}
  <div id="lightbox" class="fixed inset-0 z-[60] bg-neutral-deep/95 hidden backdrop-blur-sm transition-opacity duration-300 opacity-0" aria-hidden="true">
    <button 
      onclick="closeLightbox()" 
      class="absolute top-4 right-4 z-[70] p-2 bg-black/40 hover:bg-primary text-white rounded-full transition-colors focus:outline-none"
    >
      <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <div class="flex items-center justify-center h-full w-full p-4 sm:p-8" onclick="closeLightbox()">
        <img 
            id="lightbox-img" 
            src="" 
            alt="Preview" 
            class="max-h-[85vh] max-w-full w-auto h-auto object-contain rounded-md shadow-2xl select-none"
            onclick="event.stopPropagation()" 
        />
        <p id="lightbox-caption" class="absolute bottom-6 left-0 right-0 text-center text-white text-lg font-medium drop-shadow-md pointer-events-none px-4">
        </p>
    </div>
  </div>

  {/* --- 5. FINAL CTA (Redirects to Contact) --- */}
  <section class="bg-neutral-light py-20 border-t border-gray-200">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="font-heading text-3xl md:text-4xl font-bold mb-6 text-neutral-deep">
        {texts.ctaTitle}
      </h2>
      <p class="text-gray-600 text-lg mb-10 max-w-2xl mx-auto">
        {texts.ctaCopy}
      </p>
      
      <div class="flex justify-center">
        <a 
          href={contactLink} 
          class="bg-primary hover:bg-primary-dark text-black px-10 py-4 rounded-md font-bold text-lg transition-all shadow-lg hover:shadow-orange-500/20 hover:-translate-y-1"
        >
          Request Consultation
        </a>
      </div>
    </div>
  </section>

</Layout>

<script is:inline>
  // --- Filters ---
  const filterBtns = document.querySelectorAll('.filter-btn');
  const projectItems = document.querySelectorAll('.project-item');
  const noResults = document.getElementById('no-results');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      filterBtns.forEach(b => {
        b.classList.remove('bg-neutral-deep', 'text-white', 'border-neutral-deep', 'shadow-lg');
        b.classList.add('bg-white', 'text-gray-500', 'border-transparent');
      });
      btn.classList.remove('bg-white', 'text-gray-500', 'border-transparent');
      btn.classList.add('bg-neutral-deep', 'text-white', 'border-neutral-deep', 'shadow-lg');

      const filterValue = btn.getAttribute('data-filter');
      let hasVisible = false;

      projectItems.forEach(item => {
        if (filterValue === 'all' || item.getAttribute('data-category') === filterValue) {
          item.classList.remove('hidden');
          item.style.animation = 'fadeIn 0.5s ease forwards';
          hasVisible = true;
        } else {
          item.classList.add('hidden');
        }
      });
      
      noResults.classList.toggle('hidden', hasVisible);
    });
  });

  // --- Lightbox ---
  const lightbox = document.getElementById('lightbox');
  const lightboxImg = document.getElementById('lightbox-img');
  const lightboxCaption = document.getElementById('lightbox-caption');

  window.openLightbox = (src, title) => {
    lightboxImg.src = src;
    lightboxCaption.textContent = title;
    lightbox.classList.remove('hidden');
    requestAnimationFrame(() => {
        lightbox.classList.remove('opacity-0');
    });
    document.body.style.overflow = 'hidden';
  };

  window.closeLightbox = () => {
    lightbox.classList.add('opacity-0');
    setTimeout(() => {
      lightbox.classList.add('hidden');
      lightboxImg.src = '';
      document.body.style.overflow = '';
    }, 300);
  };

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') window.closeLightbox();
  });

  const style = document.createElement('style');
  style.textContent = `
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
  `;
  document.head.appendChild(style);
</script>
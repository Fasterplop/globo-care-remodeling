---
// src/pages/es/servicios/demolicion.astro
import Layout from '../../../layouts/Layout.astro';
import { Image } from 'astro:assets';

// Importamos activos (Usando Demolition.jpg)
import demolitionHero from '../../../assets/Demolition.jpg';

// Textos y Links de Contacto Base
const whatsappBase = "https://wa.me/19418961852";
const phoneLink = "tel:+19418961852";

// Mensajes personalizados
const msgGeneral = encodeURIComponent("Hola, necesito un estimado para una demolición o preparación de sitio.");
const msgInterior = encodeURIComponent("Hola, me interesa el servicio de demolición de interiores (baños/cocinas).");
const msgFloors = encodeURIComponent("Hola, necesito remover pisos o cerámicas existentes.");
---

<Layout 
  title="Demolición Controlada y Limpia en Sarasota | Globo Care Remodeling" 
  description="Servicios de demolición de interiores y preparación de sitios en Sarasota. Garantizamos un proceso libre de polvo, seguro y eficiente para su remodelación."
>

  {/* --- HERO SECTION --- */}
  <section class="relative bg-neutral-deep text-white min-h-[60vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0">
      <Image 
        src={demolitionHero} 
        alt="Demolición limpia y controlada en Sarasota" 
        class="w-full h-full object-cover opacity-40"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-neutral-deep/80 via-neutral-deep/50 to-neutral-deep/90"></div>
    </div>

    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-20">
      <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6 leading-tight">
        Demolición Controlada y <br />
        <span class="text-primary">Preparación de Sitios</span>
      </h1>
      
      <p class="text-lg md:text-xl text-gray-200 mb-10 font-light leading-relaxed max-w-2xl mx-auto">
        El primer paso hacia su nuevo espacio no tiene por qué ser caótico. Ejecutamos demoliciones quirúrgicas con estricto control de polvo y escombros.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href={`${whatsappBase}?text=${msgGeneral}`} target="_blank" rel="noopener noreferrer" class="w-full sm:w-auto bg-primary hover:bg-primary-dark text-neutral-deep px-8 py-4 rounded-md font-bold text-lg transition-all shadow-[0_4px_14px_0_rgba(243,146,0,0.39)] hover:shadow-[0_6px_20px_rgba(243,146,0,0.23)] hover:-translate-y-1 text-center">
          Solicitar Presupuesto
        </a>
        <a href="/es/galeria" class="w-full sm:w-auto group bg-transparent border-2 border-white hover:bg-white hover:text-neutral-deep text-white px-8 py-4 rounded-md font-bold text-lg transition-all text-center flex items-center justify-center gap-2">
          Ver Proyectos Previos
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  {/* --- SERVICIOS / ALCANCE (Diseño Sobrio) --- */}
  <section class="py-24 bg-neutral-light relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-neutral-deep mb-4">
          Un lienzo en blanco para <span class="text-primary">tu proyecto</span>.
        </h2>
        <div class="h-1 w-24 bg-primary mx-auto rounded-full"></div>
      </div>

      <div class="grid md:grid-cols-3 gap-8 items-stretch">
        
        {/* Card 1: Demolición de Interiores */}
        <div class="relative bg-white p-8 pt-10 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border-t-4 border-primary group overflow-hidden h-full flex flex-col">
           <div class="relative z-10 flex flex-col h-full">
              <h3 class="font-heading text-2xl font-bold text-neutral-deep mb-4">Interiores Completos</h3>
              <p class="text-gray-600 leading-relaxed mb-8 text-sm flex-grow">
                Demolición segura de cocinas, baños, gabinetes y paredes no estructurales. Dejamos el espacio listo para plomería y electricidad.
              </p>
              <a href={`${whatsappBase}?text=${msgInterior}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center font-bold text-primary hover:text-primary-dark transition-colors uppercase tracking-wider text-sm">
                Consultar demolición
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
              </a>
           </div>
        </div>

        {/* Card 2: Retiro de Pisos */}
        <div class="relative bg-white p-8 pt-10 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border-t-4 border-neutral-deep group overflow-hidden h-full flex flex-col">
           <div class="relative z-10 flex flex-col h-full">
              <h3 class="font-heading text-2xl font-bold text-neutral-deep mb-4">Levantamiento de Pisos</h3>
              <p class="text-gray-600 leading-relaxed mb-8 text-sm flex-grow">
                Remoción eficiente de cerámica, madera, alfombra o vinil. Incluye el raspado de pegamento y nivelación básica de la superficie.
              </p>
              <a href={`${whatsappBase}?text=${msgFloors}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center font-bold text-primary hover:text-primary-dark transition-colors uppercase tracking-wider text-sm">
                Cotizar retiro de pisos
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
              </a>
           </div>
        </div>

        {/* Card 3: Gestión de Escombros */}
        <div class="relative bg-white p-8 pt-10 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border-t-4 border-primary group overflow-hidden h-full flex flex-col">
           <div class="relative z-10 flex flex-col h-full">
              <h3 class="font-heading text-2xl font-bold text-neutral-deep mb-4">Gestión de Escombros</h3>
              <p class="text-gray-600 leading-relaxed mb-8 text-sm flex-grow">
                No dejamos rastro. Nos encargamos de la recolección, transporte y disposición final de todos los materiales demolidos.
              </p>
              <a href="/es/contacto" class="inline-flex items-center font-bold text-primary hover:text-primary-dark transition-colors uppercase tracking-wider text-sm">
                Hablemos de su proyecto
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
              </a>
           </div>
        </div>

      </div>
    </div>
  </section>

  {/* --- PROMESA DE VALOR (Cero Polvo) --- */}
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        
        {/* Columna Izquierda */}
        <div>
           <h2 class="font-heading text-3xl md:text-4xl font-bold text-neutral-deep mb-6 leading-tight">
             Nuestra Garantía: <br />
             <span class="text-primary">Su casa sigue siendo habitable.</span>
           </h2>
           <p class="text-gray-600 text-lg leading-relaxed mb-8">
             Sabemos que el polvo es la mayor preocupación al demoler. Utilizamos sistemas de barrera plástica y extracción de aire negativa para asegurar que el resto de su hogar permanezca impecable.
           </p>
           <a href={phoneLink} class="hidden md:inline-block bg-neutral-deep text-white px-8 py-3 rounded-md font-bold hover:bg-black transition-colors">
             Consultar disponibilidad
           </a>
        </div>

        {/* Columna Derecha: Valores (Líneas limpias) */}
        <div class="space-y-8">
          
          <div class="flex gap-6 group">
            <div class="w-1 bg-gray-200 group-hover:bg-primary transition-colors h-auto rounded-full"></div>
            <div>
               <h3 class="text-xl font-bold text-neutral-deep mb-2">Protección Total</h3>
               <p class="text-gray-500 leading-relaxed">
                 Cubrimos pisos de tránsito, sellamos ductos de aire y protegemos el mobiliario antes de tocar el primer martillo.
               </p>
            </div>
          </div>

          <div class="flex gap-6 group">
            <div class="w-1 bg-gray-200 group-hover:bg-primary transition-colors h-auto rounded-full"></div>
            <div>
               <h3 class="text-xl font-bold text-neutral-deep mb-2">Seguridad Estructural</h3>
               <p class="text-gray-500 leading-relaxed">
                 Evaluamos qué paredes son de carga y detectamos líneas de servicio (agua/luz) para evitar accidentes costosos.
               </p>
            </div>
          </div>

          <div class="flex gap-6 group">
            <div class="w-1 bg-gray-200 group-hover:bg-primary transition-colors h-auto rounded-full"></div>
            <div>
               <h3 class="text-xl font-bold text-neutral-deep mb-2">Eficiencia de Tiempo</h3>
               <p class="text-gray-500 leading-relaxed">
                 Equipos coordinados para terminar la fase sucia rápido, permitiendo que la remodelación comience cuanto antes.
               </p>
            </div>
          </div>

        </div>

      </div>
    </div>
  </section>

  {/* --- CONVERSION / LEADS --- */}
  <section class="py-16 bg-neutral-light border-y border-gray-100">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="font-heading text-3xl font-bold text-neutral-deep mb-4">
        Prepare el terreno para algo extraordinario.
      </h2>
      <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
        Una gran remodelación comienza con una demolición inteligente. Obtenga su estimado gratuito hoy mismo y asegure un inicio limpio para su proyecto.
      </p>
      
      <div class="flex flex-col md:flex-row gap-6 justify-center">
        <a href={`${whatsappBase}?text=${msgGeneral}`} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center gap-3 bg-[#25D366] hover:bg-[#128C7E] text-white px-8 py-4 rounded-lg font-bold text-lg transition-all shadow-lg hover:shadow-xl hover:-translate-y-1">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.013 6.17 1.242 8.413 3.491 2.243 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.506-.669-.516-.173-.009-.371-.009-.569-.009-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
          Chat con un especialista
        </a>

        <a href={phoneLink} class="flex items-center justify-center gap-3 bg-neutral-deep hover:bg-black text-white px-8 py-4 rounded-lg font-bold text-lg transition-all shadow-lg hover:shadow-xl hover:-translate-y-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Hablar con un experto
        </a>
      </div>
    </div>
  </section>

  {/* --- ENLACES INTERNOS --- */}
  <section class="py-16 bg-neutral-light">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h3 class="font-heading text-xl font-bold text-gray-400 uppercase tracking-widest text-center mb-10">Servicios Siguientes</h3>
      
      <div class="grid md:grid-cols-3 gap-6">
        <a href="/es/servicios/remodelacion" class="group block p-6 bg-white rounded-xl hover:shadow-lg transition-all border border-transparent hover:border-primary/20">
          <div class="flex items-center gap-4 mb-2">
            <div class="bg-neutral-light p-2 rounded-lg shadow-sm group-hover:bg-primary group-hover:text-white transition-colors text-neutral-deep">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h4 class="font-bold text-neutral-deep text-lg group-hover:text-primary transition-colors">Remodelación</h4>
          </div>
          <p class="text-sm text-gray-500 pl-[3.25rem]">El siguiente paso.</p>
        </a>

        <a href="/es/servicios/instalacion" class="group block p-6 bg-white rounded-xl hover:shadow-lg transition-all border border-transparent hover:border-primary/20">
          <div class="flex items-center gap-4 mb-2">
            <div class="bg-neutral-light p-2 rounded-lg shadow-sm group-hover:bg-primary group-hover:text-white transition-colors text-neutral-deep">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <h4 class="font-bold text-neutral-deep text-lg group-hover:text-primary transition-colors">Instalación</h4>
          </div>
          <p class="text-sm text-gray-500 pl-[3.25rem]">Acabados finales.</p>
        </a>

        <a href="/es/galeria" class="group block p-6 bg-white rounded-xl hover:shadow-lg transition-all border border-transparent hover:border-primary/20">
          <div class="flex items-center gap-4 mb-2">
             <div class="bg-neutral-light p-2 rounded-lg shadow-sm group-hover:bg-primary group-hover:text-white transition-colors text-neutral-deep">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <h4 class="font-bold text-neutral-deep text-lg group-hover:text-primary transition-colors">Galería</h4>
          </div>
          <p class="text-sm text-gray-500 pl-[3.25rem]">Resultados finales.</p>
        </a>
      </div>
    </div>
  </section>

</Layout>
        {texts.subheading}
      </p>

      <div class="mt-10 flex flex-wrap justify-center gap-3" id="portfolio-filters">
        {categories.map((cat, index) => (
          <button
            class={`filter-btn px-6 py-2 rounded-full text-sm font-bold transition-all border-2 
              ${index === 0 
                ? 'bg-neutral-deep text-white border-neutral-deep shadow-lg' 
                : 'bg-white text-gray-500 border-transparent hover:border-primary hover:text-primary'}`}
            data-filter={cat.id}
          >
            {cat.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8" id="gallery-grid">
        {projects.map((project) => (
          <div 
            class="group relative overflow-hidden rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 cursor-pointer project-item bg-gray-100 aspect-[4/3]"
            data-category={project.category}
            onclick={`openLightbox('${project.img.src}', '${project.title}')`}
          >
            <Image 
              src={project.img} 
              alt={project.alt}
              width={600}
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
            />
            
            <div class="absolute inset-0 bg-neutral-deep/70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
              <span class="text-primary font-bold text-sm uppercase tracking-wider mb-1">
                {categories.find(c => c.id === project.category)?.label}
              </span>
              <h3 class="text-white font-heading font-bold text-xl">
                {project.title}
              </h3>
              <div class="mt-4 inline-flex items-center text-white/80 text-sm gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" /></svg>
